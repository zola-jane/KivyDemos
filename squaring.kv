BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: 0.4
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        BoxLayout:
            Button:
                text: 'Square'
                on_press: app.handle_calculate()
            Label:
                id: output_label
                font_size: 48
                color: (1, .5, .5, 1)
    Label:
        text: 'Enter a number and press "Square"'