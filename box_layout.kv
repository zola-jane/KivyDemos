BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    BoxLayout:
        Button:
            size_hint_x: .25
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            size_hint_x: .75
            id: input_name
            text: ''
    BoxLayout:
        Button:
            size_hint_x: .25
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
            size_hint_x: .75
            text: 'Enter your name'
            color: (1, 1, 0,1)
            id: output_label
